{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:jsdoc/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "eslint-plugin-import"
  ],
  "reportUnusedDisableDirectives": true,
  "rules": {
    "import/order": ["error", {
      "alphabetize": {
        "order": "ignore",
        "caseInsensitive": false
      }
    }],
    "no-await-in-loop": "error",
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "asyncArrow": "always",
      "named": "never"
    }]
  }
}
